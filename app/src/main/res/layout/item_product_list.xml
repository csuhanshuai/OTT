<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


    <RadioButton
        android:id="@+id/rb_product_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_product_list_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rb_product_list"
        android:layout_toRightOf="@id/rb_product_list"
        android:text="Package 1"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_product_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_list_package"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/rb_product_list"
        android:text="$10"
        android:textColor="@color/color_green"/>

    <TextView
        android:id="@+id/tv_product_list_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_list_money"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/rb_product_list"
        android:text="Month"
        android:textColor="@color/color_gray"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/right"/>
</RelativeLayout>