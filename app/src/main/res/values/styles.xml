<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/textv_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <!--<item name="android:layout_marginLeft">15dp</item>-->
        <!--<item name="android:layout_marginRight">15dp</item>-->
    </style>

    <style name="radio_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/textv_selector</item>
        <item name="android:drawableBottom">@drawable/line_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:layout_marginLeft">15dp</item>-->
        <!--<item name="android:layout_marginRight">15dp</item>-->
    </style>

    <style name="demand_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/demand_head_selector</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="demand_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/line_selector</item>
        <item name="android:textColor">@drawable/demand_head_selector</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="demand_text3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/detail_jishu_selector</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/detail_selector</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="PopFilterAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_filter_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_filter_exit</item>
    </style>

    <style name="live_choice">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/textv_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="live_choice2">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/textv_selector</item>
        <item name="android:drawableBottom">@drawable/line_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="day_checkbox_style" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
    </style>
</resources>
